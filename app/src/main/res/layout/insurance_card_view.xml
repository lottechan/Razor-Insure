<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/insurance_plan_picture"
        android:background="@drawable/card_rounded_background"
        android:src="@drawable/ic_notifications_black_24dp"
        android:layout_above="@id/insurance_plan_title"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/insurance_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/insurance_plan_default_title"
        android:textColor="@color/insurance_text_color"
        android:textSize="@dimen/text_small" />


</RelativeLayout>