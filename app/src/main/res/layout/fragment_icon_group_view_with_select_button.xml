<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_icon_with_select_button"
        android:id="@+id/icon_with_select_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin" />

    <include layout="@layout/fragment_icon_with_select_button"
        android:id="@+id/icon_with_select_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_with_select_button_1"
        android:layout_marginLeft="@dimen/default_margin" />

    <include layout="@layout/fragment_icon_with_select_button"
        android:id="@+id/icon_with_select_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_with_select_button_2"
        android:layout_marginLeft="@dimen/default_margin" />

    <include layout="@layout/fragment_icon_with_select_button"
        android:id="@+id/icon_with_select_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_with_select_button_3"
        android:layout_marginLeft="@dimen/default_margin" />

</RelativeLayout>