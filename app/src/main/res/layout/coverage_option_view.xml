<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/default_coverage_option_width"
        android:layout_height="@dimen/default_coverage_option_height"
        android:id="@+id/coverage_option_picture"

        android:contentDescription="@string/coverage_option_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coverage_option_text"

        android:text="@string/coverage_option_description"
        android:layout_below="@id/coverage_option_picture"
        android:textSize="@dimen/text_small"
        android:layout_marginLeft="@dimen/coverage_option_description_margin_left" />

</RelativeLayout>